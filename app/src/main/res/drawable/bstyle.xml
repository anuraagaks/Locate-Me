<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b6ddff" />
            <corners android:radius="15dp" ></corners>
            <stroke
                android:width="1dp"
                android:color="#82baf2" />
            <corners
                android:radius="60dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#005b8c"
                android:endColor="#45b8fa"
                android:angle="270" />
            <corners android:radius="15dp" ></corners>
            <stroke
                android:width="1dp"
                android:color="#0085d1" />
            <corners
                android:radius="60dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>